{{#if mensaje}}


    <div style="display:none;">
        <input  type="text" id="txtmensajes" value="{{mensaje}}">
    </div>
    <script>
        //alert($('#txtrut').val());
        //toastr.warning('Warning, Info, Success, Error')
        var suc = $('#txtmensajes').val();
        

        toastr.success('', suc, {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        });
    </script>

{{/if}}

